{
	"version": 3,
	"configurePresets": [
		{
			"name": "dkp-release",
			"displayName": "devkitPro Release",
			"binaryDir": "${sourceDir}/build",
			"toolchainFile": "$env{DEVKITPRO}/cmake/NDS.cmake",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"NDS_TOOLCHAIN_VENDOR": "dkp"
			}
		},
		{
			"name": "blocksds-release",
			"displayName": "BlocksDS Release",
			"binaryDir": "${sourceDir}/build",
			"toolchainFile": "$env{BLOCKSDS}/cmake/BlocksDS.cmake",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"NDS_TOOLCHAIN_VENDOR": "blocks"
			}
		}
	]
}